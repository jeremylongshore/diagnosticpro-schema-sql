{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://diagnosticpro.com/schemas/diagnostic_sessions.json",
  "title": "Diagnostic Sessions",
  "description": "Equipment diagnostic session tracking schema",
  "type": "object",
  "required": [
    "session_id",
    "session_date",
    "equipment_id",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "session_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "description": "UUID v4 session identifier"
    },
    "session_date": {
      "type": "string",
      "format": "date",
      "description": "Date when session occurred (used for partitioning)"
    },
    "equipment_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "description": "UUID of equipment being diagnosed (references equipment_registry.id)"
    },
    "technician_id": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "description": "UUID of technician conducting session (references users.id)"
    },
    "customer_id": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
      "description": "UUID of customer owning equipment (references users.id)"
    },
    "session_type": {
      "type": ["string", "null"],
      "enum": ["routine_maintenance", "diagnostic", "repair", "inspection", "warranty"],
      "description": "Type of diagnostic session"
    },
    "session_status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "cancelled"],
      "default": "pending",
      "description": "Current status of the session"
    },
    "priority": {
      "type": ["string", "null"],
      "enum": ["low", "medium", "high", "critical"],
      "description": "Session priority level"
    },
    "started_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when session started"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when session completed"
    },
    "duration_minutes": {
      "type": ["integer", "null"],
      "minimum": 1,
      "maximum": 10080,
      "description": "Session duration in minutes (max 1 week)"
    },
    "diagnosis": {
      "type": "object",
      "properties": {
        "primary_issue": {
          "type": ["string", "null"],
          "maxLength": 500,
          "description": "Primary issue identified"
        },
        "root_cause": {
          "type": ["string", "null"],
          "maxLength": 1000,
          "description": "Root cause analysis"
        },
        "dtc_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[PBCU]\\d{4}$"
          },
          "description": "Diagnostic trouble codes found"
        },
        "symptoms": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 200
          },
          "description": "Reported symptoms"
        },
        "findings": {
          "type": ["string", "null"],
          "maxLength": 2000,
          "description": "Detailed diagnostic findings"
        }
      },
      "additionalProperties": false
    },
    "resolution": {
      "type": "object",
      "properties": {
        "action_taken": {
          "type": ["string", "null"],
          "maxLength": 1000,
          "description": "Actions taken to resolve issues"
        },
        "parts_replaced": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "part_id": {
                "type": "string",
                "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
              },
              "part_number": {
                "type": "string",
                "maxLength": 50
              },
              "quantity": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": ["part_id", "quantity"],
            "additionalProperties": false
          },
          "description": "Parts replaced during session"
        },
        "total_cost": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Total cost of repairs"
        },
        "labor_hours": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 100,
          "description": "Labor hours (reasonable upper limit)"
        },
        "warranty_provided": {
          "type": ["boolean", "null"],
          "description": "Whether warranty was provided for work"
        },
        "warranty_duration_days": {
          "type": ["integer", "null"],
          "minimum": 1,
          "maximum": 3650,
          "description": "Warranty duration in days (max 10 years)"
        }
      },
      "additionalProperties": false
    },
    "tools_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tool_id": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
          },
          "tool_name": {
            "type": "string",
            "maxLength": 100
          },
          "usage_duration_minutes": {
            "type": ["integer", "null"],
            "minimum": 1
          }
        },
        "required": ["tool_id", "tool_name"],
        "additionalProperties": false
      },
      "description": "Diagnostic tools used during session"
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 5000,
      "description": "Additional session notes"
    },
    "photos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": ["string", "null"],
            "maxLength": 200
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["url", "timestamp"],
        "additionalProperties": false
      },
      "description": "Photos taken during session"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when record was last updated"
    },
    "deleted_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp when record was soft deleted (null if active)"
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "session_status": {"const": "completed"}
        }
      },
      "then": {
        "required": ["completed_at"],
        "properties": {
          "completed_at": {
            "type": "string"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "started_at": {"type": "string"},
          "completed_at": {"type": "string"}
        }
      },
      "then": {
        "properties": {
          "duration_minutes": {
            "type": "integer"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "resolution": {
            "properties": {
              "warranty_provided": {"const": true}
            }
          }
        }
      },
      "then": {
        "properties": {
          "resolution": {
            "required": ["warranty_duration_days"],
            "properties": {
              "warranty_duration_days": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  ]
}